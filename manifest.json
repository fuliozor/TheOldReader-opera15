{
	"manifest_version": 2,

	"name": "OldReader extension",
	"description": "This extension provides a toolbar icon to notify you about unread items in your The Old Reader account.",
	"version": "1.0",
	"background": {"scripts": ["functions.js", "background.js"]},

	"permissions": ["tabs", "*://theoldreader.com/"],
	
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},

	"browser_action": {
	  "default_icon": "icon-inactive.png",
	  "default_title": "Открыть The Old Reader"
	}
}