{
	"manifest_version": 2,

	"name": "The Old Reader extension",
	"description": "This extension provides a toolbar icon to notify you about unread items in your The Old Reader account.",
	"version": "1.0",
	"background": {"scripts": ["analytics.js", "ga.js", "dictionary.js", "functions.js", "background.js"]},

	"permissions": ["tabs", "*://theoldreader.com/", "*://google-analytics.com/*"],
	
	"options_page": "options.html",
	
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},

	"browser_action": {
	  "default_icon": "icon-inactive.png",
	  "default_title": "Open The Old Reader"
	}
}